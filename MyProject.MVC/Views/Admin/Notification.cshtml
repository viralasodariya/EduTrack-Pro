@{
    ViewData["Title"] = "Notifications";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-bell me-2"></i>Unread Notifications</h5>
                </div>
                <div class="card-body notification-container">
                    <div id="unreadNotificationsList" class="notification-list"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Read Notifications</h5>
                </div>
                <div class="card-body notification-container">
                    <div id="readNotificationsList" class="notification-list"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/admin/Notification.css" asp-append-version="true" />
    <script src="~/js/admin/Notification.js" asp-append-version="true"></script>
}