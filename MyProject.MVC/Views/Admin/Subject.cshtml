@{
    ViewData["Title"] = "Class Management";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid py-4">
    <div id="notification" class="mb-3"></div>
    <div class="row g-4">
        <div class="col-12">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="fs-4 fw-bold mb-0">Manage Subjects</h2>
                </div>
                <div class="card-body p-4">
                    <!-- Add New Subject & Assign Subject Cards -->
                    <div class="row g-4 mb-4">
                        <!-- Add New Subject Card -->
                        <div class="col-lg-4 col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-header bg-light py-3">
                                    <h3 class="fs-5 fw-semibold mb-0">Add New Subject</h3>
                                </div>
                                <div class="card-body">
                                    <form id="addSubjectForm" class="mb-0"></form>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Assign Subject Card -->
                        <div class="col-lg-8 col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-header bg-light py-3">
                                    <h3 class="fs-5 fw-semibold mb-0">Assign Subject to Teacher</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row g-3 align-items-end">
                                        <div class="col-lg-5 col-md-12">
                                            <label class="form-label fw-medium">Select Teacher:</label>
                                            <input id="teacherDropdown" class="form-control w-100" />
                                        </div>
                                        <div class="col-lg-5 col-md-12">
                                            <label class="form-label fw-medium">Select Subject:</label>
                                            <input id="subjectDropdown" class="form-control w-100" />
                                        </div>
                                        <div class="col-lg-2 col-md-12">
                                            <button id="assignSubjectBtn" class="k-button k-primary w-100 py-2">Assign</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Grids Row -->
                    <div class="row g-4">
                        <!-- Assigned Subjects Grid -->
                        <div class="col-lg-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-header bg-light py-3">
                                    <h3 class="fs-5 fw-semibold mb-0">Teachers with Assigned Subjects</h3>
                                </div>
                                <div class="card-body">
                                    <div id="gridAssignedSubjects" class="grid-container"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Unassigned Subjects Grid -->
                        <div class="col-lg-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-header bg-light py-3">
                                    <h3 class="fs-5 fw-semibold mb-0">Teachers with Unassigned Subjects</h3>
                                </div>
                                <div class="card-body">
                                    <div id="gridUnassignedSubjects" class="grid-container"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/admin/Subject.css" asp-append-version="true" />
    <script src="~/js/admin/Subject.js" asp-append-version="true"></script>
}