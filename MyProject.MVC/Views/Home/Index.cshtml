@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="~/css/Landing/home.css">

<!-- Hero Section -->
<section id="hero" class="d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1">
                <h1>Welcome to EduTrack Pro</h1>
                <h2>Comprehensive School Management Solution</h2>
                <p>Track student progress, manage curriculum, and streamline administrative tasks all in one place.</p>
                <div class="d-flex justify-content-center justify-content-lg-start">
                    <a href="#features" class="btn-get-started scrollto">Get Started</a>
                    <a href="#" class="btn-watch-video"><i class="bi bi-play-circle"></i><span>Watch Demo</span></a>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 hero-img">
                <img src="~/img/Home.png" class="img-fluid animated" alt="Education Hero">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features">
    <div class="container">
        <div class="section-title">
            <h2>Features</h2>
            <p>EduTrack Pro provides schools with powerful tools to enhance learning outcomes and optimize
                administrative efficiency.</p>
        </div>

        <div class="row feature-cards">
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="feature-box">
                    <i class="bi bi-mortarboard-fill"></i>
                    <h3>Student Management</h3>
                    <p>Track attendance, grades, and performance with comprehensive student profiles.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="feature-box">
                    <i class="bi bi-book"></i>
                    <h3>Curriculum Tracking</h3>
                    <p>Organize lesson plans and align curriculum with educational standards.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="feature-box">
                    <i class="bi bi-calendar-check"></i>
                    <h3>Scheduling</h3>
                    <p>Create and manage class schedules, events, and academic calendars.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="feature-box">
                    <i class="bi bi-graph-up"></i>
                    <h3>Analytics</h3>
                    <p>Generate insights on student performance and institutional effectiveness.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <img src="~/img/home2.jpg" class="img-fluid" alt="School Management">
            </div>
            <div class="col-lg-6 pt-4 pt-lg-0 content">
                <h3>Why Choose EduTrack Pro?</h3>
                <p class="fst-italic">
                    Designed by educators for educators, our system brings together everything schools need to excel.
                </p>
                <ul>
                    <li><i class="bi bi-check-circle"></i> Streamlined administrative workflows</li>
                    <li><i class="bi bi-check-circle"></i> Real-time academic performance tracking</li>
                    <li><i class="bi bi-check-circle"></i> Improved communication between teachers, students and parents
                    </li>
                    <li><i class="bi bi-check-circle"></i> Data-driven decision making</li>
                </ul>
                <p>
                    With EduTrack Pro, focus on what matters most - providing quality education - while we handle the
                    rest.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="testimonials">
    <div class="container">
        <div class="section-title">
            <h2>Testimonials</h2>
            <p>What educators are saying about EduTrack Pro</p>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="testimonial-item">
                    <img src="~/img/testimonial-1.jpg" class="testimonial-img" alt="Principal">
                    <h3>Sarah Johnson</h3>
                    <h4>Principal, Lincoln High School</h4>
                    <p>
                        <i class="bi bi-quote quote-icon-left"></i>
                        EduTrack Pro transformed how we manage our school. The analytics feature has been invaluable for
                        our improvement initiatives.
                        <i class="bi bi-quote quote-icon-right"></i>
                    </p>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="testimonial-item">
                    <img src="~/img/testimonial-2.jpg" class="testimonial-img" alt="Teacher">
                    <h3>Michael Roberts</h3>
                    <h4>Math Department Head, Westview Academy</h4>
                    <p>
                        <i class="bi bi-quote quote-icon-left"></i>
                        The curriculum tracking tools have made coordination across our department seamless. Parents
                        love the transparency too!
                        <i class="bi bi-quote quote-icon-right"></i>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="contact">
    <div class="container">
        <div class="section-title">
            <h2>Get In Touch</h2>
            <p>Have questions? We're here to help!</p>
        </div>

        <div class="row">
            <div class="col-lg-5 d-flex align-items-stretch">
                <div class="info">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Location:</h4>
                        <p>123 Education Ave, Learning City, ED 12345</p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>info@edutrackpro.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>+1 555 123 4567</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 d-flex align-items-stretch">
                <form class="contact-form">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="name">Your Name</label>
                            <input type="text" name="name" class="form-control" id="name" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="email">Your Email</label>
                            <input type="email" class="form-control" name="email" id="email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" class="form-control" name="subject" id="subject" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" name="message" rows="5" required></textarea>
                    </div>
                    <div class="text-center"><button type="submit" class="btn-contact-submit">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>