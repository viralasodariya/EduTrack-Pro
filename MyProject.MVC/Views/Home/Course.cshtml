@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Landing/course.css" />

<div class="course-header">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Advanced Learning Program</h1>
                <p class="lead">Expand your knowledge and skills with our comprehensive courses designed for success.
                </p>
                <div class="d-flex gap-2 mt-4">
                    <button class="btn btn-primary">Enroll Now</button>
                    <button class="btn btn-outline-secondary">Learn More</button>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="https://placehold.co/600x400/4e73df/ffffff?text=Course+Overview" alt="Course Overview"
                    class="img-fluid rounded shadow-lg" />
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <!-- Course Features Section -->
    <div class="section-title mb-5">
        <h2>Course Features</h2>
        <p class="text-muted">Everything you need for academic excellence</p>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="icon-wrapper"><i class="fas fa-book"></i></div>
                <h3>Comprehensive Curriculum</h3>
                <p>Structured learning paths designed by education experts to ensure thorough understanding.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="icon-wrapper"><i class="fas fa-users"></i></div>
                <h3>Expert Instructors</h3>
                <p>Learn from qualified teachers with years of experience in their respective fields.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="icon-wrapper"><i class="fas fa-laptop"></i></div>
                <h3>Digital Resources</h3>
                <p>Access to online materials, videos, and interactive exercises to enhance learning.</p>
            </div>
        </div>
    </div>

    <!-- Course Details Section -->
    <div class="row my-5">
        <div class="col-lg-8">
            <div class="course-details p-4 rounded">
                <h2 class="mb-4">Course Overview</h2>
                <div class="accordion" id="courseAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Module 1: Foundations
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                            data-bs-parent="#courseAccordion">
                            <div class="accordion-body">
                                <p>Introduction to key concepts and fundamental principles. Building blocks for advanced
                                    topics.</p>
                                <ul class="lesson-list">
                                    <li>Introduction to the Subject</li>
                                    <li>Historical Context and Development</li>
                                    <li>Core Principles and Methodologies</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Module 2: Advanced Concepts
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                            data-bs-parent="#courseAccordion">
                            <div class="accordion-body">
                                <p>Deeper exploration of complex topics and specialized knowledge areas.</p>
                                <ul class="lesson-list">
                                    <li>Theoretical Frameworks</li>
                                    <li>Analytical Approaches</li>
                                    <li>Problem-Solving Strategies</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Module 3: Practical Applications
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree"
                            data-bs-parent="#courseAccordion">
                            <div class="accordion-body">
                                <p>Hands-on implementation of knowledge through projects and case studies.</p>
                                <ul class="lesson-list">
                                    <li>Case Study Analysis</li>
                                    <li>Project Development</li>
                                    <li>Field Applications</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="instructor-card p-4 rounded">
                <img src="https://placehold.co/150x150/224abe/ffffff?text=Instructor"
                    class="rounded-circle mx-auto d-block" alt="Instructor">
                <h3 class="text-center mt-3">Dr. Jane Smith</h3>
                <p class="text-center text-muted">PhD in Education</p>
                <p class="mt-3">Dr. Smith has over 15 years of teaching experience and specializes in developing
                    innovative learning approaches.</p>
                <div class="text-center mt-3">
                    <a href="#" class="text-primary">View Profile</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="section-title my-5">
        <h2>Student Testimonials</h2>
        <p class="text-muted">What our students say about this course</p>
    </div>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="testimonial-card p-4 rounded">
                <div class="stars mb-2">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <p>"This course completely transformed my understanding of the subject. The instructors were
                    knowledgeable and supportive."</p>
                <div class="d-flex align-items-center mt-3">
                    <img src="https://placehold.co/50x50/f6c23e/ffffff" class="rounded-circle me-3" alt="Student">
                    <div>
                        <h5 class="mb-0">Michael Johnson</h5>
                        <small class="text-muted">Student</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="testimonial-card p-4 rounded">
                <div class="stars mb-2">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                </div>
                <p>"The course materials were comprehensive and the online platform made it easy to study at my own
                    pace. Highly recommended!"</p>
                <div class="d-flex align-items-center mt-3">
                    <img src="https://placehold.co/50x50/f6c23e/ffffff" class="rounded-circle me-3" alt="Student">
                    <div>
                        <h5 class="mb-0">Sarah Williams</h5>
                        <small class="text-muted">Student</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="testimonial-card p-4 rounded">
                <div class="stars mb-2">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <p>"The practical assignments helped me apply what I learned immediately. This course exceeded my
                    expectations!"</p>
                <div class="d-flex align-items-center mt-3">
                    <img src="https://placehold.co/50x50/f6c23e/ffffff" class="rounded-circle me-3" alt="Student">
                    <div>
                        <h5 class="mb-0">David Chen</h5>
                        <small class="text-muted">Student</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enrollment Section with Call to Action -->
<div class="enrollment-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2>Ready to advance your education?</h2>
                <p class="lead">Join thousands of students already benefiting from our courses. Enrollment is open now!
                </p>
            </div>
            <div class="col-md-4 text-md-end">
                <button class="btn btn-lg btn-primary">Enroll Today</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
                
                   
                               
                           
                                   
                               
                           
                               
                           
                   
                   
                   
                   
                   
                