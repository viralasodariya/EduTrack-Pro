@{
    Layout = "~/Views/Shared/_Layout_Teacher.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0 fs-4">Assigned Subjects</h2>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="viewOptionsDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            View Options
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="viewOptionsDropdown">
                            <li><a class="dropdown-item" href="#" id="refreshData">Refresh Data</a></li>
                            <li><a class="dropdown-item" href="#" id="toggleCompletedSubjects">Toggle Completed</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div id="loadingIndicator" class="text-center my-5 d-none">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading subjects data...</p>
                    </div>
                    <div id="subjectsGridContainer" class="responsive-grid-container">
                        <div id="subjectsGrid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/teacher/Subjects.css" asp-append-version="true" />
    <script src="~/js/teacher/Subjects.js" asp-append-version="true"></script>
}