@{
    Layout = "~/Views/Shared/_Layout_Student.cshtml";
    ViewData["Title"] = "Student Dashboard";
}

<div class="container-fluid dashboard-container">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="dashboard-title">Welcome, <span id="studentName" class="text-primary"></span></h1>
                        <p class="text-muted">Last login: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")</p>
                    </div>
                    <div class="real-time-status">
                        <span class="badge bg-success">Online</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
            <div class="card shadow h-100 dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Current GPA</h5>
                    <h2 class="dashboard-stat">3.75</h2>
                    <p class="trend text-success"><i class="bi bi-arrow-up"></i> 0.25 since last semester</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
            <div class="card shadow h-100 dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Attendance</h5>
                    <h2 class="dashboard-stat">92%</h2>
                    <p class="trend text-warning"><i class="bi bi-arrow-down"></i> 3% this month</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
            <div class="card shadow h-100 dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Completed Assignments</h5>
                    <h2 class="dashboard-stat">24/30</h2>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                            aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
            <div class="card shadow h-100 dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Course Credits</h5>
                    <h2 class="dashboard-stat">45/120</h2>
                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 37.5%"
                            aria-valuenow="37.5" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Profile Details -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3 mb-md-0">
            <div class="card shadow h-100 dashboard-card">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">Profile Details</h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4 mb-3 mb-md-0 text-center">
                            <img id="profileImage" src="" alt="Profile Photo"
                                class="img-fluid rounded-circle profile-image" style="width: 100px; height: 100px;">
                        </div>
                        <div class="col-md-8">
                            <div class="profile-info">
                                <p><strong>Full Name:</strong> <span id="fullName">Loading...</span></p>
                                <p><strong>Email:</strong> <span id="studentEmail">Loading...</span></p>
                                <p><strong>Date of Birth:</strong> <span id="dateOfBirth">Loading...</span></p>
                                <p><strong>Gender:</strong> <span id="gender">Loading...</span></p>
                                <p><strong>Class:</strong> <span id="className">Loading...</span></p>
                                <p><strong>Enrollment Date:</strong> <span id="enrollmentDate">Loading...</span></p>
                            </div>
                            <a href="/Student/Profile" class="btn btn-outline-primary btn-sm mt-2">
                                <i class="bi bi-pencil-square"></i> Edit Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Upcoming Classes -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-transparent">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Upcoming Classes</h5>
                        <span class="badge bg-primary real-time-badge">
                            <i class="bi bi-broadcast"></i> Live Updates
                        </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Course</th>
                                    <th>Teacher</th>
                                    <th>Time Slot</th>
                                    <th>Day</th>
                                </tr>
                            </thead>
                            <tbody id="class-schedule-container">
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Loading schedule...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Row -->
    <div class="row">
        <!-- Announcements with real-time updates -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-transparent">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Upcoming Assignments</h5>
                        <span class="badge bg-primary real-time-badge">
                            <i class="bi bi-broadcast"></i> Live Updates
                        </span>
                    </div>
                </div>
                <div class="card-body assignments-container">
                    <div id="notifications-container">
                        <p class="text-muted">Loading notifications...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-primary">
                            <i class="bi bi-book"></i> Course Registration
                        </a>
                        <a href="#" class="btn btn-info">
                            <i class="bi bi-calendar3"></i> Schedule Appointment
                        </a>
                        <a href="#" class="btn btn-success">
                            <i class="bi bi-file-earmark-text"></i> Submit Assignment
                        </a>
                        <a href="#" class="btn btn-warning">
                            <i class="bi bi-chat-dots"></i> Message Instructor
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/student/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <script src="~/js/student/index.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
}
